<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonMenu">
    <defaultcontrol>9001</defaultcontrol>
    <include>dialogeffect</include>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <include>dialogeffect</include>
    <depth>DepthDialog+</depth>
    <controls>
        <control type="button" id="9001">
            <description>Make sure we hit the first button in the group list and not the close window button</description>
            <left>-24</left>
            <top>-24</top>
            <width>6</width>
            <height>6</height>
            <label></label>
            <font></font>
            <onfocus>down</onfocus>
            <texturefocus></texturefocus>
            <texturenofocus></texturenofocus>
            <onleft>9000</onleft>
            <onright>9000</onright>
            <onup>9000</onup>
            <ondown>2</ondown>
        </control>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
        </control>
        <control type="grouplist" id="9000">
            <left>705</left>
            <top>0</top>
            <width>510</width>
            <height>1080</height>
            <onleft>9000</onleft>
            <onright>9000</onright>
            <onup>9000</onup>
            <ondown>9000</ondown>
            <itemgap>0</itemgap>
            <align>center</align>
            <control type="group" id="1">
                <width>510</width>
                <height>45</height>
                <control type="image">
                    <description>background top image</description>
                    <left>0</left>
                    <top>0</top>
                    <width>510</width>
                    <height>45</height>
                    <texture border="20,19,20,0">$VAR[DialogPath]DialogContextTop.png</texture>
                </control>
                <control type="button" id="100">
                    <description>Close Window button</description>
                    <left>390</left>
                    <top>8</top>
                    <onclick>PreviousMenu</onclick>
                    <include>DialogCloseButton</include>
                    <onleft>2</onleft>
                    <onright>14</onright>
                    <onup>14</onup>
                    <ondown>2</ondown>
                </control>
            </control>
            <control type="group" id="2">
                <width>510</width>
                <height>60</height>
                <visible>System.ShowExitButton</visible>
                <control type="image">
                    <description>background image</description>
                    <left>0</left>
                    <top>0</top>
                    <width>510</width>
                    <height>60</height>
                    <texture border="25,5,25,5">$VAR[DialogPath]DialogContextMiddle.png</texture>
                </control>
                <control type="button" id="200">
                    <description>Exit button</description>
                    <left>27</left>
                    <top>0</top>
                    <width>456</width>
                    <height>60</height>
                    <onleft>3</onleft>
                    <onright>1</onright>
                    <onup>1</onup>
                    <ondown>3</ondown>
                    <textcolor>grey2</textcolor>
                    <focusedcolor>white</focusedcolor>
                    <align>center</align>
                    <textwidth>435</textwidth>
                    <onclick condition="!Skin.HasSetting(MinimizeOnExit)">Quit()</onclick>
                    <onclick condition="Skin.HasSetting(MinimizeOnExit)">Minimize</onclick>
                    <pulseonselect>no</pulseonselect>
                    <font>font13</font>
                    <label>13012</label>
                </control>
            </control>
            <control type="group" id="8">
                <width>510</width>
                <height>60</height>
                <visible>System.CanReboot</visible>
                <control type="image">
                    <description>background image</description>
                    <left>0</left>
                    <top>0</top>
                    <width>510</width>
                    <height>60</height>
                    <texture border="25,5,25,5">$VAR[DialogPath]DialogContextMiddle.png</texture>
                </control>
                <control type="button" id="800">
                    <description>Reboot button</description>
                    <left>27</left>
                    <top>0</top>
                    <width>456</width>
                    <height>60</height>
                    <onleft>9</onleft>
                    <onright>7</onright>
                    <onup>7</onup>
                    <ondown>9</ondown>
                    <textcolor>grey2</textcolor>
                    <focusedcolor>white</focusedcolor>
                    <align>center</align>
                    <textwidth>435</textwidth>
                    <onclick condition="!Skin.HasSetting(RestartNotReboot)">Reset()</onclick>
                    <onclick condition="Skin.HasSetting(RestartNotReboot)">RestartApp()</onclick>
                    <pulseonselect>no</pulseonselect>
                    <font>font13</font>
                    <label>13013</label>
                </control>
            </control>
            <control type="group" id="10">
                <width>510</width>
                <height>60</height>
                <visible>Skin.HasSetting(Show_Mastermode) + System.HasLocks</visible>
                <control type="image">
                    <description>background image</description>
                    <left>0</left>
                    <top>0</top>
                    <width>510</width>
                    <height>60</height>
                    <texture border="25,5,25,5">$VAR[DialogPath]DialogContextMiddle.png</texture>
                </control>
                <control type="togglebutton" id="1000">
                    <description>Master mode button</description>
                    <left>27</left>
                    <top>0</top>
                    <width>456</width>
                    <height>60</height>
                    <onleft>12</onleft>
                    <onright>9</onright>
                    <onup>9</onup>
                    <ondown>12</ondown>
                    <textcolor>grey2</textcolor>
                    <focusedcolor>white</focusedcolor>
                    <align>center</align>
                    <textwidth>435</textwidth>
                    <usealttexture>!System.IsMaster</usealttexture>
                    <include>NormalButton</include>
                    <include>AltButton</include>
                    <onclick>mastermode</onclick>
                    <pulseonselect>no</pulseonselect>
                    <font>font13</font>
                    <label>20046</label>
                    <altlabel>20045</altlabel>
                </control>
            </control>
            <control type="group" id="11">
                <width>510</width>
                <height>105</height>
                <visible>System.HasAlarm(shutdowntimer)</visible>
                <control type="image">
                    <description>background image</description>
                    <left>0</left>
                    <top>0</top>
                    <width>510</width>
                    <height>105</height>
                    <texture border="25,5,25,5">$VAR[DialogPath]DialogContextMiddle.png</texture>
                </control>
                <control type="textbox">
                    <left>38</left>
                    <top>33</top>
                    <width>435</width>
                    <height>72</height>
                    <font>font12</font>
                    <textcolor>white</textcolor>
                    <shadowcolor>black</shadowcolor>
                    <align>center</align>
                    <label>$LOCALIZE[31329] [B]$INFO[System.Alarmpos][/B]</label>
                </control>
            </control>
            <control type="image" id="15">
                <description>background bottom image</description>
                <left>0</left>
                <width>510</width>
                <height>38</height>
                <texture border="20,0,19,20">$VAR[DialogPath]DialogContextBottom.png</texture>
            </control>
        </control>
    </controls>
</window>
